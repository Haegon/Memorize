<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/middle_1"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="중학교 필수 단어 1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/middle_2"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="중학교 필수 단어 2"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/middle_3"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="중학교 필수 단어 3"
            android:textAlignment="center"
            android:textSize="25dp" />
        <Button
            android:id="@+id/high_1"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="수능 필수 단어 1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/high_2"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="수능 필수 단어 2"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/high_3"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="수능 필수 단어 3"
            android:textAlignment="center"
            android:textSize="25dp" />
        <Button
            android:id="@+id/toeic_1"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="토익 필수 단어 1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/toeic_2"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="토익 필수 단어 2"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>

</ScrollView>