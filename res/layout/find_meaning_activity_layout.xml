<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/find_meaning_word_text"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_gravity="center|center_vertical"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="50dp" />

    <RadioGroup
        android:id="@+id/find_meaning_radio_group"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:paddingLeft="20dp" >

        <RadioButton
            android:id="@+id/find_meaning_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/find_meaning_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/find_meaning_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/find_meaning_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/find_meaning_radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/find_meaning_prev_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:text="이전"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/find_meaning_check_btn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:text="정답 확인"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/find_meaning_next_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:text="다음"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>