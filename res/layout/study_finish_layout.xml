<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/study_good_job"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:src="@raw/goodjob" />

    <TextView
        android:id="@+id/study_finish_text"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Thank you for your effort"
        android:textColor="#000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/study_restart_btn"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="@string/result_again_study"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/study_home_btn"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/category_btn"
            android:onClick="onClick"
            android:text="@string/result_home"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>