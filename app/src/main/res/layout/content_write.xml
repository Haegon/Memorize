<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/write_problem_word_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center|center_vertical"
                android:gravity="center"
                android:textColor="@color/app_gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/write_problem_word_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="40dp" />

            <EditText
                android:id="@+id/write_problem_word_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center|center_vertical"
                android:gravity="center"
                android:lines="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/write_right_answer_word_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|top"
                android:gravity="center_horizontal|top"
                android:textSize="25dp" />

        </LinearLayout>


        <!-- 버튼-->
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btn_prev"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_circle_gray"
                    android:text="@string/prev"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_circle_green"
                    android:gravity="center"
                    android:text="@string/check"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />


